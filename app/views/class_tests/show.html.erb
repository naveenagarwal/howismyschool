<% if @class_test.has_test_results_for_current_year? %>

  <div id="inline-div" class="center-block">

    <div class="have-margin">
      <div class="absoulte-position">
        Class Test
        <strong>
          <%= @class_test.name %> Toppers
        </strong>
        for the year: <strong><%= TimeExt.current_year %></strong>
      </div>
      <div id="chartcontainer1">
        Hey, howdy!. Is every thing all right with you?
        <%= barchart_for_class_test_toppers @class_test.id, "chartcontainer1" %>
      </div>
    </div>

    <div class="have-margin">
      <div class="absoulte-position">
        Class Test
        <strong>
          <%= @class_test.name %> Lowest Scorers
        </strong>
