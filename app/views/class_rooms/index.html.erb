<h3>Listing Class Rooms</h3>

<%= render partial: '/shared/paginate_collection', locals: { records: @class_rooms } %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Class Room Name</th>
      <th>Grade</th>
      <th>Number of Students(<%= TimeExt.current_year %>)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_rooms.each do |class_room| %>
      <tr>
        <td><%= class_room.name %></td>
        <td><%= class_room.grade %></td>
        <td><%= class_room.current_students.count %></td>
        <td><%= link_to 'Show', class_room %></td>
        <td><%= link_to 'Edit', edit_class_room_path(class_room) %></td>
        <td><%= link_to 'Destroy', class_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class room', new_class_room_path %>
